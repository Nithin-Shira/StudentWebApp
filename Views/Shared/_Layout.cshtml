@using Microsoft.AspNetCore.Http
@{
    var isAdmin = Context.Session.GetString("IsAdmin") == "true";
}

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - StudentWebApp</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        /* Material / glass style + dark mode */
        :root {
            --bg: #f4f7fb;
            --card-bg: rgba(255,255,255,0.85);
            --glass-border: rgba(0,0,0,0.06);
            --accent: #0d6efd;
            --text: #2b2b2b;
        }

        [data-theme="dark"] label,
        [data-theme="dark"] .form-label {
            color: #cfd8dc !important;
        }

        [data-theme="dark"] h1,
        [data-theme="dark"] h2,
        [data-theme="dark"] h3,
        [data-theme="dark"] h4 {
            color: #ffffff !important;
        }

        [data-theme="dark"] .form-control {
            background-color: #121821;
            border: 1px solid #2b3948;
            color: #fff;
        }

        [data-theme="dark"] {
            --bg: #0f1720;
            --card-bg: rgba(20,24,28,0.6);
            --glass-border: rgba(255,255,255,0.06);
            --accent: #3ea3ff;
            --text: #e6eef8;
        }

        html, body {
            height: 100%;
            background: var(--bg);
            color: var(--text);
        }

        .sidebar {
            width: 220px;
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.02));
            border-right: 1px solid var(--glass-border);
            position: fixed;
            top: 0;
            bottom: 0;
            padding-top: 72px;
        }

            .sidebar .nav-link {
                color: var(--text);
                padding: 12px 18px;
                border-radius: 8px;
            }

                .sidebar .nav-link.active {
                    background: rgba(13,110,253,0.12);
                    color: var(--accent);
                    font-weight: 600;
                }

        .content {
            margin-left: 240px;
            padding-top: 20px;
            padding-right: 30px;
            padding-left: 30px;
        }

        .topbar {
            position: fixed;
            left: 240px;
            right: 0;
            top: 0;
            height: 64px;
            background: var(--card-bg);
            border-bottom: 1px solid var(--glass-border);
            display: flex;
            align-items: center;
            padding: 0 24px;
            z-index: 50;
        }

        .card.glass {
            background: var(--card-bg);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
        }

        .avatar {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: white;
            background: var(--accent);
        }

        .btn-accent {
            background: linear-gradient(90deg,var(--accent), #0b5ed7);
            color: white;
            border: none;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <div class="px-3 pb-3">
            <h4 class="ms-2 mt-2">StudentWebApp</h4>
        </div>
        <nav class="nav flex-column px-2">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Student" ? "active" : "")" href="/Student">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>
            <a class="nav-link" href="/Student/Add"><i class="bi bi-person-plus me-2"></i> Add Student</a>
            <a class="nav-link" href="/Student/ExportCsv"><i class="bi bi-download me-2"></i> Export CSV</a>
            @if (!isAdmin)
            {
                <a class="nav-link" href="/Account/Login"><i class="bi bi-lock me-2"></i> Admin Login</a>
            }
            else
            {
                <a class="nav-link" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a>
            }
        </nav>
        <div class="mt-auto p-3">
            <small class="text-muted">Workshop Demo • .NET 8</small>
        </div>
    </div>

    <!-- Topbar -->
    <div class="topbar">
        <div class="d-flex align-items-center justify-content-between w-100">
            <div>
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>

            <div class="d-flex align-items-center gap-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="darkToggle">
                    <label class="form-check-label" for="darkToggle">Dark</label>
                </div>
                <a class="btn btn-sm btn-outline-secondary" href="/Student/ExportCsv?search=@ViewBag.Search">CSV</a>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="content">
        <div style="height: 72px;"></div> <!-- spacer for topbar -->
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Theme toggle
        const root = document.documentElement;
        const toggle = document.getElementById('darkToggle');

        // initialize from localStorage
        const saved = localStorage.getItem('theme') || 'light';
        root.setAttribute('data-theme', saved);
        toggle.checked = saved === 'dark';

        toggle.addEventListener('change', () => {
            const newTheme = toggle.checked ? 'dark' : 'light';
            root.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
