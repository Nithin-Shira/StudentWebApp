@model List<Student>

@{
    ViewData["Title"] = "Student Dashboard";
    var isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">Student Dashboard</h2>
        <small class="text-muted">Manage students, view reports, export CSV</small>
    </div>
    <div>
        <form method="get" class="d-flex" style="gap:8px;">
            <input name="search" value="@ViewBag.Search" placeholder="Search by name, email, course or city" class="form-control" />
            <button class="btn btn-primary">Search</button>
        </form>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card glass p-3">
            <canvas id="courseChart"></canvas>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card glass p-3">
            <h6 class="mb-3">Summary</h6>
            <p><strong>Total Students:</strong> @Model.Count()</p>
            <p><strong>Current Page:</strong> @ViewBag.CurrentPage / @ViewBag.TotalPages</p>
            <p><strong>Admin:</strong> @(isAdmin ? "Yes" : "No")</p>
        </div>
    </div>
</div>

<div class="row g-4">
    @foreach (var s in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card glass h-100 p-3">
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="avatar">@s.FullName.Substring(0, 1).ToUpper()</div>
                    <div>
                        <div class="fw-bold">@s.FullName</div>
                        <div class="text-muted small">@s.Email</div>
                    </div>
                </div>
                <p class="mb-1"><strong>Course:</strong> @s.Course</p>
                <p class="mb-1"><strong>City:</strong> @s.City</p>
                <p class="mb-1"><strong>Fee:</strong> ₹@s.FeePaid</p>

                <div class="mt-3 d-flex gap-2">
                    <a class="btn btn-sm btn-outline-secondary" href="/Student/Details/@s.Id">Details</a>

                    @if (isAdmin)
                    {
                        <a class="btn btn-sm btn-warning text-white" href="/Student/Edit/@s.Id">Edit</a>

                        <form method="post" action="/Student/Delete/@s.Id" style="display:inline;">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    }
</div>

<nav class="mt-4">
    <ul class="pagination justify-content-center">
        @{
            int current = ViewBag.CurrentPage;
            int total = ViewBag.TotalPages;
            var search = ViewBag.Search;
        }
        @for (int i = 1; i <= total; i++)
        {
            <li class="page-item @(i == current ? "active" : "")">
                <a class="page-link" href="/Student?search=@search&page=@i">@i</a>
            </li>
        }
    </ul>
</nav>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // fetch chart data from endpoint
        fetch('/Student/ChartData')
            .then(r => r.json())
            .then(data => {
                const labels = data.map(x => x.course || 'Unknown');
                const totals = data.map(x => x.totalFee);

                const ctx = document.getElementById('courseChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Total Fees by Course',
                            data: totals,
                            backgroundColor: 'rgba(13,110,253,0.8)'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false }
                        }
                    }
                });
            });
    </script>
}
